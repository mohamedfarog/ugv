<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

     <xacro:include filename="common_properties.xacro" />
     
     <xacro:property name="base_length" value="1.77" />
     <xacro:property name="base_height" value="0.63" />
     <xacro:property name="base_width" value="0.928" />
     <xacro:property name="wheel_radius" value="0.2" />
     <xacro:property name="wheel_length" value="0.10" />


      

    <link name="base_footprint" />

    <link name="base_link">

    
        <visual>
            <geometry>
           <box size="1.0 1.0 1.0"/>
            </geometry>

        </visual>
           <collision>
            <geometry>
                 <box size="1.0 1.0 1.0"/>
            </geometry>
        </collision>

         <inertial>
      <mass value="5.0"/>
      <inertia  ixx="3" ixy="2"  ixz="2"
                iyy="0.001"  iyz="0.0"
                izz="0.001"/>
    </inertial>
    </link>

    <link name="right_wheel_link">
        <visual>
            <geometry>
                <!-- <mesh filename="package://my_robot_description/meshes/wheel1.dae"/> -->
                <cylinder radius="${wheel_radius}" length="0.10" />
            </geometry>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="black" />
        </visual>
          <collision>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
            </collision>

          <xacro:cylinder_inertia m="1.0" r="${2*wheel_radius}" h="${2*wheel_length}" 
                                   xyz="0 0 0" rpy="1.57 0 0" />
    </link>


    <link name="left_wheel_link">
        <visual>
            <geometry>
                <cylinder radius="${wheel_radius}" length="0.10" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="black" />
        </visual>
            <collision>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
            </collision>

        <xacro:cylinder_inertia m="1.0" r="${2*wheel_radius}" h="${2*wheel_length}" 
                                   xyz="0 0 0" rpy="1.57 0 0" />
    </link>

     <link name="back_right_wheel_link">
        <visual>
            <geometry>
                <cylinder  radius="${wheel_radius}" length="0.10" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="black" />
        </visual>
            <collision>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
            </collision>

       <xacro:cylinder_inertia m="1.0" r="${2*wheel_radius}" h="${2*wheel_length}" 
                                   xyz="0 0 0" rpy="1.57 0 0" />
    </link>

        <link name="back_left_wheel_link">
        <visual>
            <geometry>
                <cylinder  radius="${wheel_radius}" length="0.10" />
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0" />
            <material name="black" />
        </visual>
            <collision>
                <geometry>
                    <cylinder radius="${wheel_radius}" length="${wheel_length}" />
                </geometry>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
            </collision>

          <xacro:cylinder_inertia m="1.0" r="${2*wheel_radius}" h="${2*wheel_length}" 
                                   xyz="0 0 0" rpy="1.57 0 0" />
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint" />
        <child link="base_link" />
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <joint name="base_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="right_wheel_link" />
        <origin xyz="-0.39 -0.480 0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

    <joint name="base_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="left_wheel_link" />
        <origin xyz="-0.39 0.480 0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

      <joint name="base_back_right_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_right_wheel_link" />
        <origin xyz="0.56 -0.480 0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

        <joint name="base_back_left_wheel_joint" type="continuous">
        <parent link="base_link" />
        <child link="back_left_wheel_link" />
        <origin xyz="0.56 0.480 0.1" rpy="0 0 0" />
        <axis xyz="0 1 0" />
    </joint>

</robot>